doctype html
html(lang='en')
  head
    title #{title} - GitList.js
    link(rel='stylesheet', href='/scripts/vendor/bootstrap/dist/css/bootstrap.min.css')
  body
    .navbar.navbar-scroll-top.navbar-inverse
      .navbar-inner
        .container
          a(class='navbar-brand', href='/')= "GitList.js"
    .container
      block content
    footer
      .container
        p= 'Running on '
          a(href='http://nodejs.org', target='_blank')= 'Node.js'
          = ' with '
          a(href='http://expressjs.com', target='_blank')= 'Express'
          = ' and '
          a(href='http://jade-lang.com', target='_blank')= 'Jade'
          = ' using '
          a(href='http://getbootstrap.com', target='_blank')= 'Twitter Bootstrap'
          = ' with '
          a(href='http://glyphicons.com', target='_blank')= 'Glyphicons'
    script(src='/scripts/vendor/jquery/dist/jquery.min.js')
    script(src='/scripts/vendor/bootstrap/dist/js/bootstrap.min.js')
